<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="BaseText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BaseText.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="BaseText.Title.Grey">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="BaseText.Content">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="BaseText.Subtitle">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">@font/poppins_lightitalic</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="ToolbarTextAppearance" parent="BaseText">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/card_corner_radius_0</item>
        <item name="android:fontFamily">@font/poppins_lightitalic</item>
        <item name="android:textColor">@color/notino_gray_d1</item>
        <item name="strokeColor">@color/notino_gray_d1</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressBackgroundTint">@color/darkGrey</item>
        <item name="android:progressTint">@color/notino_pink</item>
    </style>

    <style name="HearthRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/like_radio_button</item>
    </style>
</resources>